extends layout

block content
    include ./addChannelModal.jade
    
    #wrapper
      // Navigation
      nav.navbar.navbar-default.navbar-static-top(role='navigation', style='margin-bottom: 0')
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation             
            span.icon-bar                  
            span.icon-bar                
            span.icon-bar             
        // /.navbar-header
        
        div.navbar-center  
          a#playButton.navbar-brand
            i.fa.fa-play
          a#pauseButton.navbar-brand
            i.fa.fa-pause
          div
            input#volumeBar(type='range', min='0', value='100', max='100', step='1')
            input#playerProgress(type='range', min='0', value='0', max='100', step='1')

        
        ul.nav.navbar-top-links.navbar-right
          li.dropdown
            a.dropdown-toggle(data-toggle='dropdown', href='#')
              i.fa.fa-user.fa-fw
              i.fa.fa-caret-down               
            ul.dropdown-menu.dropdown-user
              li
                a()
                  i.fa.fa-user.fa-fw
                  |  #{user.username}                                    
              li.divider                  
              li
                a(href='/logout')
                  i.fa.fa-sign-out.fa-fw
                  |  Logout
            // /.dropdown-user
          // /.dropdown
        // /.navbar-top-links
        .navbar-default.sidebar(role='navigation')
          .sidebar-nav.navbar-collapse
            ul#channelList.nav         
              //Add channel names here
              each channel in channelInfo
                li
                  a(data-id="#{channel._id}") #{channel.name}
                    img(src="#{channel.thumbnail}").img-responsive.pull-left
                    i.remove.fa.fa-times.pull-right
                      
              li#addChannelButton
                button.btn.btn-primary(type="button", data-toggle="modal", data-target="#addChannelModal") Add Channel
         
          // /.sidebar-collapse
        // /.navbar-static-side
    .loading
    #player
    #page-wrapper
      .row
        .col-lg-12
          .header
            img
            h1.page-header Dashboard
        // /.col-lg-12
      // /.row
      
      .row.videos
      // /.row
    // /#page-wrapper
  // /#wrapper
